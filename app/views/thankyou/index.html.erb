<h1>Thank You!</h1>
<% @cart.each do | id | %>
	<div class="row featurette">
	<% product = Product.find_by_id(id) %>
		<div class="col-md-8">
			<b><%= link_to product.name, product %></b> 	
		</div>
		<div class="col-md-4">
			<%= link_to 'Download', {:controller => "thankyou", :action => "download", :id => product.id }, :class => "btn", target: '_blank' %>
		</div>
	</div>
	<br>
<% end %>
